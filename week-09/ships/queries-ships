SELECT SH.NAME, CL.COUNTRY, CL.NUMGUNS, SH.LAUNCHED
FROM SHIPS SH
LEFT JOIN CLASSES AS CL
ON SH.CLASS = CL.CLASS;

SELECT SH.NAME, BA.DATE
FROM SHIPS SH
LEFT JOIN OUTCOMES OU
ON SH.NAME = OU.SHIP
LEFT JOIN BATTLES BA
ON OU.BATTLE = BA.NAME
WHERE BA.DATE LIKE "1942%";

SELECT DISTINCT CL.COUNTRY, SH.NAME
FROM CLASSES CL
LEFT JOIN SHIPS SH
ON CL.CLASS = SH.CLASS
LEFT JOIN OUTCOMES OU
ON SH.NAME = OU.SHIP
LEFT JOIN BATTLES BA
ON OU.BATTLE = BA.NAME
WHERE BA.NAME IS NULL AND SH.NAME IS NOT NULL;


